<div class="row mt-4">
    <div class="col-md-6">
        <h3>Edit Post:</h3>
            
        <form class="edit-post-form">
        <div class="form-line">
            <label for="post-title">title:</label>
            <input class="form-input" type="text" id="post-title" name="post-title" value="{{post.title}}"/>
        </div>
        <div class="form-line">
            <label for="post-description">description:</label>
            <textarea class="form-input" id="post-description" name="post-description">{{post.description}}</textarea>
        </div>
        <div class="form-line">
            <button type="submit" class="new-post">Update</button>
            <button type="submit" id="delete-btn" class="new-post">Delete</button>
        </div>
        </form>
    </div>
</div>